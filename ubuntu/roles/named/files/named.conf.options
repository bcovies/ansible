options {
        directory "/var/cache/bind";
        dnssec-validation auto;
        listen-on-v6 { none; };
        auth-nxdomain no;    
        listen-on port 53 { localhost; 192.168.0.1/24; };
        allow-query { localhost; 192.168.0.1/24; };
        forwarders { 192.168.0.1; 8.8.8.8; };
        recursion yes;
};